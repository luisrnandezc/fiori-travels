{
  "name": "cap-backend",
  "version": "1.0.0",
  "description": "SAP CAP Backend for Fiori Travels Project",
  "repository": "https://github.com/luisrnandezc/fiori-travels",
  "license": "MIT",
  "dependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds": "^9",
    "@sap/cds-common-content": "^3.1.0",
    "cors": "^2.8.6",
    "express": "^4"
  },
  "scripts": {
    "start": "npx cds-serve"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": ":memory:"
        }
      },
      "auth": {
        "kind": "dummy"
      }
    },
    "features": {
      "cors": {
        "origin": "*",
        "methods": [
          "GET",
          "POST",
          "PATCH",
          "DELETE",
          "OPTIONS"
        ],
        "allowedHeaders": [
          "Content-Type",
          "Authorization",
          "X-Requested-With",
          "OData-Version",
          "OData-MaxVersion"
        ],
        "exposeHeaders": [
          "OData-Version",
          "OData-MaxVersion"
        ]
      }
    }
  },
  "engines": {
    "node": ">=18"
  },
  "private": true
}
