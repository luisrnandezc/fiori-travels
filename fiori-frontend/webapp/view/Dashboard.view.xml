<mvc:View
    controllerName="mock.travels.controller.Dashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <App>
        <Page title="Travel Dashboard" class="sapUiResponsiveContentPadding">
            <content>

                <!-- HEADER SECTION -->
                 <Panel
                    headerText="Customer Management"
                    class="sapUiResponsiveSmallMarginBottom">

                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="Customer Management" level="H2" />
                            <ToolbarSpacer />

                            <!-- Customer Count Badge -->
                             <ObjectStatus 
                                text="{= ${/Customers/$count} || 0 } Customers"
                                state="Information"
                                icon="sap-icon://group"/>
                            
                            <!-- Actions -->
                             <Button
                                text="Add Customer"
                                type="Emphasized"
                                icon="sap-icon://add"
                                press=".onAddCustomer"/>
                            
                            <Button 
                                icon="sap-icon://refresh"
                                press=".onRefreshCustomers"/>
                        </OverflowToolbar>
                    </headerToolbar>

                    <!-- Panel Content: Brief Description -->
                     <content>
                        <VBox class="sapUiSmallMargin">
                            <Text 
                                text="Manage your travel customers, view booking history, and create new customer records. Use the search below to find specific customers."
                                class="sapUiTinyMarginBottom"/>

                            <!--Quick stats -->
                            <HBox>
                                <ObjectStatus 
                                    text="Active" 
                                    state="Success" 
                                    icon="sap-icon://status-positive"/>
                                <ObjectStatus 
                                    text="Real-Time Data" 
                                    state="Information" 
                                    icon="sap-icon://connected" 
                                    class="sapUiTinyMarginBegin"/>
                            </HBox>
                        </VBox>
                     </content>
                 </Panel>

                <SearchField
                    id="searchCustomer"
                    width="50%"
                    class="sapUiSmallMarginBottom"
                    placeholder="Search by customer name..."
                    search=".onSearch"/>

                <Table 
                    id="customersTable"
                    items="{
                        path: '/Customers',
                        parameters: {
                            $$groupId: '$direct'
                        }
                    }">

                    <columns>
                        <Column>
                            <Text text="ID" />
                        </Column>
                        <Column>
                            <Text text="Customer" />
                        </Column>
                        <Column>
                            <Text text="City" />
                        </Column>
                        <Column>
                            <Text text="Country" />
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{CustomerNumber}" />
                                <Text text="{CustomerName}" />
                                <Text text="{City}" />
                                <Text text="{Country}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </content>

        </Page>
    </App>

</mvc:View>